<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:backgroundTint="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Icono decorativo -->
        <ImageView
            android:id="@+id/ivTaskIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_task"
            android:layout_marginEnd="16dp" />

        <!-- Contenedor de texto para mayor flexibilidad -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTaskName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre de la tarea"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/tvTaskDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n opcional de la tarea"
                android:textColor="#767676"
                android:textSize="14sp"
                android:ellipsize="end"
                android:singleLine="false"
                android:maxLines="2"
                android:scrollHorizontally="false"
                android:layout_marginTop="2dp"/>

        </LinearLayout>

        <!-- Switch moderno -->
        <Switch
            android:id="@+id/switchTaken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_marginStart="12dp"
            android:thumbTint="#2F78AF"
            android:trackTint="#A7C7E7"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
